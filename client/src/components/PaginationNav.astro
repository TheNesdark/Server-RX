---
const { total, currentPage, totalPages } = Astro.props;

// Obtener el término de búsqueda actual de la URL
const url = new URL(Astro.request.url);
const searchTerm = url.searchParams.get('q') || '';
---

{totalPages > 1 && (
  <nav class="pagination" role="navigation" aria-label="Paginación Estudios">
    <div class="pagination-info">
      Mostrando <strong>
        {currentPage === 1 ? 1 : (currentPage - 1) * 10 + 1}
        - 
        {Math.min(currentPage * 10, total)}
      </strong> de <strong>{total}</strong>
    </div>
    
    <div class="pagination-controls">
      <a 
        href={currentPage > 1 ? searchTerm ? `?q=${encodeURIComponent(searchTerm)}&page=${currentPage - 1}` : `?page=${currentPage - 1}` : '#'} 
        class={`page-btn ${currentPage <= 1 ? 'disabled' : ''}`}
        aria-disabled={currentPage <= 1}
        style={currentPage <= 1 ? 'pointer-events: none; cursor: default;' : ''}
      >
        &lt;
      </a>
      
      <a 
        href={currentPage < totalPages ? searchTerm ? `?q=${encodeURIComponent(searchTerm)}&page=${currentPage + 1}` : `?page=${currentPage + 1}` : '#'} 
        class={`page-btn ${currentPage >= totalPages ? 'disabled' : ''}`}
        aria-disabled={currentPage >= totalPages}
        style={currentPage >= totalPages ? 'pointer-events: none; cursor: default;' : ''}
      >
        &gt;
      </a>
    </div>
  </nav>
)}

<style>
  .pagination {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    margin: 1rem 0;
    border-top: 1px solid #e0e0e0;
  }

  .pagination-info {
    font-size: 0.9rem;
    color: #666;
  }

  .pagination-controls {
    display: flex;
    gap: 0.5rem;
  }

  .page-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    text-decoration: none;
    color: #333;
    border: 1px solid #ddd;
    border-radius: 4px;
    transition: all 0.2s;
  }

  .page-btn:hover:not(.disabled) {
    background-color: #f5f5f5;
    border-color: #999;
  }

  .page-btn.active {
    background-color: #007cba;
    color: white;
    border-color: #007cba;
  }

  .page-btn.disabled {
    color: #999;
    cursor: not-allowed;
    opacity: 0.6;
  }

  .page-dots {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    color: #666;
  }
</style>