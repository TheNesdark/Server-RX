---
interface Study {
  id: string;
  patient_name: string;
  patient_id: string;
  patient_sex: string;
  institution_name: string;
  study_date: string;
  description: string;
}

interface FormattedStudy {
  id: string;
  patientName: string;
  patientId: string;
  patientSex: string;
  studyDate: string;
  institution: string;
  modality: string;
  shortId: string;
}

const {
  total,
  studies,
  currentPage = 1,
} = Astro.props as {
  total: number;
  studies: Study[];
  currentPage?: number;
};

// Función para formatear los estudios
const formattedStudies: FormattedStudy[] = studies.map((study) => {
  // Obtener un ID corto (últimos 8 caracteres del ID)
  const shortId = study.id.length > 8 ? study.id.slice(-8) : study.id;

  // Formatear el nombre si está disponible
  const patientName = study.patient_name
    ? study.patient_name.replace(/[^a-zA-Z0-9\s]/g, "")
    : "Paciente Anónimo";

  return {
    id: study.id,
    patientName: patientName || "Paciente Anónimo",
    patientId: study.patient_id || "ID Desconocido",
    patientSex: study.patient_sex || "Sexo Desconocido",
    institution: study.institution_name || "Institución Desconocida",
    studyDate: study.study_date
      ? new Date(study.study_date).toLocaleDateString("es-ES")
      : "Fecha Desconocida",
    modality: study.description || "Sin descripción",
    shortId,
  };
});
---

<div class="page-container">
  <header class="header">
    <div class="header-content">
      <div class="title-section">
        <div class="logo-icon">
          <svg
            width="28"
            height="28"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
            <circle cx="8.5" cy="8.5" r="1.5"></circle>
            <polyline points="21 15 16 10 5 21"></polyline>
          </svg>
        </div>
        <div>
          <h1>Estudios DICOM</h1>
          <p class="subtitle">Sistema de Visualización Médica</p>
        </div>
      </div>

      <div class="header-actions">
        <div class="stats-badge">
          <span class="stats-number">{total}</span>
          <span class="stats-label">estudios</span>
        </div>

        <div class="search-container">
          <svg
            class="search-icon"
            width="18"
            height="18"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <circle cx="11" cy="11" r="8"></circle>
            <path d="m21 21-4.35-4.35"></path>
          </svg>
          <input
            type="search"
            id="search-input"
            placeholder="Buscar paciente..."
            autocomplete="off"
          />
        </div>
      </div>
    </div>
  </header>

  <div class="table-container">
    <table id="studies-table">
      <thead>
        <tr>
          <th class="col-id">ID Paciente</th>
          <th class="col-patient">Paciente</th>
          <th class="col-sex">Sexo</th>
          <th class="col-institution">Institución</th>
          <th class="col-date">Fecha</th>
          <th class="col-modality">Modalidad</th>
          <th class="col-view">Acciones</th>
        </tr>
      </thead>
      <tbody>
        {
          formattedStudies.map((study: FormattedStudy, index: number) => (
            <tr class="study-row" style={`--delay: ${index * 0.04}s`}>
              <td>
                <code class="id-code">{study.patientId}</code>
              </td>
              <td>
                <div class="patient-cell">
                  <div class="patient-avatar">
                    {study.patientName.charAt(0).toUpperCase()}
                  </div>
                  <div class="patient-details">
                    <span class="patient-name">{study.patientName}</span>
                    <span class="patient-id">ID: {study.patientId}</span>
                  </div>
                </div>
              </td>
              <td>{study.patientSex}</td>
              <td>{study.institution}</td>
              <td>{study.studyDate}</td>
              <td>
                <span
                  class={`modality-chip modality-${study.modality.toLowerCase()}`}
                >
                  {study.modality}
                </span>
              </td>
              <td class="view-link">
                <a href={`/viewer/${study.id}`} class="view-btn">
                  Ver
                </a>
              </td>
            </tr>
          ))
        }
      </tbody>
    </table>
    {
      formattedStudies.length === 0 && (
        <div class="empty-state">
          <p>No hay estudios</p>
        </div>
      )
    }
  </div>
</div>

<script>
  const container = document.querySelector(".page-container");
  const searchInput = container.querySelector("#search-input");
  const tableBody = container.querySelector("tbody");
  const statsNumber = container.querySelector(".stats-number");

  async function performSearch(searchTerm, page = 1) {
    try {
      // Mostrar estado de carga
      tableBody.innerHTML =
        '<tr><td colspan="7" class="empty-state">Cargando...</td></tr>';

      // Realizar la solicitud a la API
      const response = await fetch(
        `/api/search/studies?q=${encodeURIComponent(searchTerm)}&page=${page}`,
      );
      const data = await response.json();

      if (!response.ok) {
        throw new Error(data.error || "Error en la búsqueda");
      }

      // Actualizar la tabla con los nuevos resultados
      updateTable(data.studies);

      // Actualizar el contador de estudios
      statsNumber.textContent = data.total;

    } catch (error) {
      console.error("Error en la búsqueda:", error);
      tableBody.innerHTML =
        '<tr><td colspan="7" class="empty-state">Error al cargar los resultados</td></tr>';
    }
  }

  // Función para actualizar la tabla
  function updateTable(studies) {
    if (!tableBody) return;

    // Limpiar tabla
    tableBody.innerHTML = "";

    // Formatear estudios y agregar a la tabla
    studies.forEach((study, index) => {
      // Obtener un ID corto (últimos 8 caracteres del ID)
      const shortId = study.id.length > 8 ? study.id.slice(-8) : study.id;

      // Formatear el nombre si está disponible
      const patientName = study.patient_name
        ? study.patient_name.replace(/[^a-zA-Z0-9\s]/g, "")
        : "Paciente Anónimo";

      const modality = study.description || "Sin descripción";

      // Crear fila
      const row = document.createElement("tr");
      row.className = "study-row";
      row.setAttribute(
        "data-searchable",
        `${patientName} ${study.patient_id} ${study.patient_sex} ${study.institution_name} ${modality} ${study.study_date} ${shortId}`.toLowerCase(),
      );
      row.style.cssText = `--delay: ${index * 0.04}s;`;

      row.innerHTML = `
            <td><code class="id-code">${study.patient_id || "ID Desconocido"}</code></td>
            <td>
              <div class="patient-cell">
                <div class="patient-avatar">
                  ${patientName.charAt(0).toUpperCase()}
                </div>
                <div class="patient-details">
                  <span class="patient-name">${patientName || "Paciente Anónimo"}</span>
                  <span class="patient-id">ID: ${study.patient_id || "ID Desconocido"}</span>
                </div>
              </div>
            </td>
            <td>${study.patient_sex || "Sexo Desconocido"}</td>
            <td>${study.institution_name || "Institución Desconocida"}</td>
            <td>${study.study_date ? new Date(study.study_date).toLocaleDateString("es-ES") : "Fecha Desconocida"}</td>
            <td>
              <span class="modality-chip modality-${modality.toLowerCase()}">
                ${modality}
              </span>
            </td>
            <td class="view-link">
              <a href="/viewer/${study.id}" class="view-btn">Ver</a>
            </td>
          `;

      tableBody.appendChild(row);
    });

    if (studies.length === 0) {
      tableBody.innerHTML =
        '<tr><td colspan="7" class="empty-state">No hay estudios</td></tr>';
    }
  }
  searchInput.addEventListener("input", async (event) => {
    const searchTerm = event.target.value.trim();
    await performSearch(searchTerm);
  });
</script>

