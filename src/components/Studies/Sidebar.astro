---
const pathname = new URL(Astro.request.url).pathname;
---

<!-- Botón para abrir sidebar en móvil -->
<button
    id="mobile-toggle"
    class="mobile-toggle"
    aria-label="Abrir menú"
>
    <svg
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
    >
        <path d="M3 12h18M3 6h18M3 18h18"></path>
    </svg>
</button>

<!-- Overlay para móvil -->
<div id="sidebar-overlay" class="sidebar-overlay"></div>

<aside id="main-sidebar">
    <div class="sidebar-header">
        <h2 class="sidebar-title">IPS Hospital Local de Montelíbano</h2>
        <button
            class="sidebar-toggle"
            id="sidebar-toggle"
            aria-label="Toggle sidebar"
        >
            <svg
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
            >
                <path d="M3 12h18M3 6h18M3 18h18"></path>
            </svg>
        </button>
        <button
            class="mobile-close"
            id="mobile-close"
            aria-label="Cerrar menú"
        >
            <svg
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
            >
                <path d="M18 6L6 18M6 6l12 12"></path>
            </svg>
        </button>
    </div>

    <nav class="nav-menu">
        <ul>
            <li>
                <a href="/" class={pathname === "/" ? "active" : ""} title="Búsqueda Estudios">
                    <span class="icon">
                        <svg
                            width="20"
                            height="20"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                        >
                            <circle cx="11" cy="11" r="8"></circle>
                            <path d="m21 21-4.35-4.35"></path>
                        </svg>
                    </span>
                    <span class="nav-text">Búsqueda Estudios</span>
                </a>
            </li>
            <li>
                <a href="/configuracion" class={pathname === "/configuracion" ? "active" : ""} title="Configuración">
                    <span class="icon">
                        <svg
                            width="20"
                            height="20"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                        >
                            <path d="M12.22 2h-.44a2 2 0 0 0-2 2v.18a2 2 0 0 1-1 1.73l-.43.25a2 2 0 0 1-2 0l-.15-.08a2 2 0 0 0-2.73.73l-.22.38a2 2 0 0 0 .73 2.73l.15.1a2 2 0 0 1 1 1.72v.51a2 2 0 0 1-1 1.74l-.15.09a2 2 0 0 0-.73 2.73l.22.38a2 2 0 0 0 2.73.73l.15-.08a2 2 0 0 1 2 0l.43.25a2 2 0 0 1 1 1.73V20a2 2 0 0 0 2 2h.44a2 2 0 0 0 2-2v-.18a2 2 0 0 1 1-1.73l.43-.25a2 2 0 0 1 2 0l.15.08a2 2 0 0 0 2.73-.73l.22-.39a2 2 0 0 0-.73-2.73l-.15-.08a2 2 0 0 1-1-1.74v-.5a2 2 0 0 1 1-1.74l.15-.09a2 2 0 0 0 .73-2.73l-.22-.38a2 2 0 0 0-2.73-.73l-.15.08a2 2 0 0 1-2 0l-.43-.25a2 2 0 0 1-1-1.73V4a2 2 0 0 0-2-2z"></path>
                            <circle cx="12" cy="12" r="3"></circle>
                        </svg>
                    </span>
                    <span class="nav-text">Configuración</span>
                </a>
            </li>
        </ul>
    </nav>

    <div class="sidebar-footer">
        <a href="/logout" class="logout" title="Cerrar Sesión">
            <svg
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
            >
                <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                <polyline points="16 17 21 12 16 7"></polyline>
                <line x1="21" y1="12" x2="9" y2="12"></line>
            </svg>
            <span class="logout-text">Cerrar Sesión</span>
        </a>
    </div>
</aside>

<script>
    const sidebar = document.getElementById("main-sidebar");
    const toggleButton = document.getElementById("sidebar-toggle");
    const mobileToggle = document.getElementById("mobile-toggle");
    const mobileClose = document.getElementById("mobile-close");
    const overlay = document.getElementById("sidebar-overlay");

    // Toggle para escritorio (colapsar/expandir)
    toggleButton?.addEventListener("click", () => {
        sidebar?.classList.toggle("collapsed");
    });

    // Toggle para móvil (abrir/cerrar)
    const toggleMobileMenu = () => {
        sidebar?.classList.toggle("mobile-open");
        overlay?.classList.toggle("show");
        document.body.classList.toggle("sidebar-open");
    };

    mobileToggle?.addEventListener("click", toggleMobileMenu);
    mobileClose?.addEventListener("click", toggleMobileMenu);
    overlay?.addEventListener("click", toggleMobileMenu);
</script>

<style>
    aside {
        background: var(--sidebar-bg);
        border-right: 1px solid var(--sidebar-border);
        width: 248px;
        min-width: 248px;
        height: 100vh;
        display: flex;
        flex-direction: column;
        position: relative;
        transition: width 0.24s ease, transform 0.24s ease;
    }

    aside.collapsed {
        width: 72px;
        min-width: 72px;
    }

    .sidebar-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
        padding: 14px 14px 14px 16px;
        border-bottom: 1px solid var(--sidebar-border);
        background: var(--surface-muted);
    }

    .sidebar-title {
        color: var(--sidebar-text-main);
        font-size: 0.95rem;
        font-weight: 600;
        margin: 0;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        transition: opacity 0.2s ease;
        flex: 1;
    }

    .sidebar-toggle,
    .mobile-close {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 34px;
        height: 34px;
        padding: 0;
        border-radius: 10px;
        border: 1px solid var(--sidebar-border);
        background: var(--surface);
        color: var(--sidebar-text-muted);
        cursor: pointer;
        transition: border-color 0.2s ease, color 0.2s ease, background-color 0.2s ease;
        flex-shrink: 0;
    }

    .sidebar-toggle:hover,
    .mobile-close:hover {
        background: var(--sidebar-hover);
        border-color: rgba(15, 118, 110, 0.35);
        color: var(--sidebar-text-main);
    }

    .mobile-close {
        display: none;
    }

    .nav-menu {
        flex: 1;
        padding: 12px;
        overflow-y: auto;
    }

    aside ul {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 4px;
    }

    aside a {
        display: flex;
        align-items: center;
        justify-content: flex-start;
        gap: 10px;
        padding: 10px 12px;
        color: var(--sidebar-text-muted);
        text-decoration: none;
        font-size: 0.875rem;
        font-weight: 500;
        border-radius: 10px;
        border: 1px solid transparent;
        transition: background-color 0.2s ease, border-color 0.2s ease, color 0.2s ease;
    }

    aside a:hover {
        background: var(--sidebar-hover);
        border-color: rgba(15, 118, 110, 0.2);
        color: var(--sidebar-text-main);
    }

    aside a.active {
        background: rgba(15, 118, 110, 0.12);
        border-color: rgba(15, 118, 110, 0.35);
        color: var(--sidebar-text-main);
        font-weight: 600;
    }

    aside .icon {
        margin-right: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 20px;
        height: 20px;
        flex-shrink: 0;
    }

    .nav-text {
        white-space: nowrap;
        overflow: hidden;
    }

    .sidebar-footer {
        padding: 12px;
        border-top: 1px solid var(--sidebar-border);
        background: var(--surface-muted);
        transition: padding 0.24s ease;
    }

    .logout {
        display: flex;
        align-items: center;
        justify-content: flex-start;
        gap: 8px;
        padding: 9px 12px;
        border-radius: 10px;
        border: 1px solid transparent;
        color: #8f3f3f;
        font-size: 0.875rem;
        text-decoration: none;
        transition: background-color 0.2s ease, border-color 0.2s ease, color 0.2s ease;
    }

    .logout:hover {
        background: #fff5f5;
        border-color: #f3d1d1;
        color: #7f1d1d;
    }

    aside.collapsed .sidebar-title,
    aside.collapsed .nav-text,
    aside.collapsed .logout-text {
        display: none;
    }

    aside.collapsed .sidebar-toggle {
        margin: 0 auto;
    }

    aside.collapsed a,
    aside.collapsed .logout {
        justify-content: center;
        padding-left: 0;
        padding-right: 0;
    }

    aside.collapsed .sidebar-footer {
        padding: 10px 6px;
    }

    .mobile-toggle {
        display: none;
        position: fixed;
        top: 10px;
        left: 10px;
        z-index: 999;
        width: 38px;
        height: 38px;
        padding: 0;
        border: 1px solid var(--sidebar-border);
        border-radius: 10px;
        background: var(--surface);
        color: var(--text-main);
        cursor: pointer;
        box-shadow: var(--shadow-sm);
    }

    .sidebar-overlay {
        display: none;
        position: fixed;
        inset: 0;
        background: rgba(16, 32, 34, 0.28);
        z-index: 999;
        opacity: 0;
        transition: opacity 0.24s ease;
        pointer-events: none;
    }

    .sidebar-overlay.show {
        opacity: 1;
        pointer-events: auto;
    }

    @media (max-width: 768px) {
        .mobile-toggle {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .sidebar-overlay {
            display: block;
        }

        aside {
            position: fixed;
            left: 0;
            top: 0;
            z-index: 1000;
            transform: translateX(-100%);
            width: 272px;
            min-width: 272px;
            box-shadow: var(--shadow-lg);
        }

        aside.mobile-open {
            transform: translateX(0);
        }

        .sidebar-toggle {
            display: none;
        }

        .mobile-close {
            display: flex;
        }

        :global(body.sidebar-open) {
            overflow: hidden;
        }
    }
</style>
