<aside id="main-sidebar">
    <div class="sidebar-header">
        <h2 class="sidebar-title">IPS Hospital Local de Montelíbano</h2>
        <button class="sidebar-toggle" id="sidebar-toggle" aria-label="Toggle sidebar">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M3 12h18M3 6h18M3 18h18"></path>
            </svg>
        </button>
    </div>
    <nav class="nav-menu">
        <ul>
            <li>
                <a href="/" class="active" title="Búsqueda Estudios">
                    <span class="icon">
                        <svg
                            width="20"
                            height="20"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                        >
                            <circle cx="11" cy="11" r="8"></circle>
                            <path d="m21 21-4.35-4.35"></path>
                        </svg>
                    </span>
                    <span class="nav-text">Búsqueda Estudios</span>
                </a>
            </li>
        </ul>
    </nav>
    <div class="user-info">
        {Astro.locals.user && (
            <div class="user-details" data-exp={Astro.locals.user.exp}>
                <p class="user-greeting">Bienvenido, <strong class="username">{Astro.locals.user.username}</strong></p>
                <p class="session-info">Sesión expira en: <span id="session-countdown"></span></p>
            </div>
        )}
    </div>
    <div class="sidebar-footer">
        <a href="/logout" class="logout" title="Cerrar Sesión">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                <polyline points="16 17 21 12 16 7"></polyline>
                <line x1="21" y1="12" x2="9" y2="12"></line>
            </svg>
            <span class="logout-text">Cerrar Sesión</span>
        </a>
    </div>
</aside>

<script is:inline>
    document.addEventListener('DOMContentLoaded', () => {
        const sidebar = document.getElementById('main-sidebar');
        const toggleButton = document.getElementById('sidebar-toggle');
        const countdownElement = document.getElementById('session-countdown');
        const userDetails = document.querySelector('.user-details');

        // Funcionalidad de colapsar/expandir sidebar
        if (sidebar && toggleButton) {
            // En móviles, el sidebar empieza colapsado por defecto
            const isMobile = window.innerWidth <= 768;
            
            // Cargar estado guardado del localStorage (solo en desktop)
            const savedState = !isMobile ? localStorage.getItem('sidebar-collapsed') : 'true';
            const isCollapsed = savedState === 'true';
            
            if (isCollapsed) {
                sidebar.classList.add('collapsed');
            }

            toggleButton.addEventListener('click', () => {
                sidebar.classList.toggle('collapsed');
                updateOverlay();
                // Guardar estado en localStorage solo en desktop
                if (!isMobile) {
                    const isNowCollapsed = sidebar.classList.contains('collapsed');
                    localStorage.setItem('sidebar-collapsed', isNowCollapsed.toString());
                }
            });

            // Función para actualizar el overlay
            function updateOverlay() {
                let overlay = document.querySelector('.sidebar-overlay');
                if (window.innerWidth <= 768) {
                    if (!overlay) {
                        overlay = document.createElement('div');
                        overlay.className = 'sidebar-overlay';
                        document.body.appendChild(overlay);
                        overlay.addEventListener('click', () => {
                            sidebar.classList.add('collapsed');
                            updateOverlay();
                        });
                    }
                    if (sidebar.classList.contains('collapsed')) {
                        overlay.classList.remove('active');
                    } else {
                        overlay.classList.add('active');
                    }
                } else if (overlay) {
                    overlay.classList.remove('active');
                }
            }

            // Actualizar overlay inicial
            updateOverlay();

            // Manejar cambios de tamaño de ventana
            let resizeTimer;
            window.addEventListener('resize', () => {
                clearTimeout(resizeTimer);
                resizeTimer = setTimeout(() => {
                    updateOverlay();
                }, 250);
            });
        }

        // Funcionalidad del countdown de sesión
        if (countdownElement && userDetails) {
            // Leemos el valor de expiración del atributo data-exp y lo convertimos a número
            const expirationTime = parseInt(userDetails.dataset.exp || '0', 10); // Unix timestamp in seconds

            function updateCountdown() {
                const now = Math.floor(Date.now() / 1000); // Current Unix timestamp in seconds
                const timeLeft = expirationTime - now;

                if (timeLeft <= 0) {
                    countdownElement.textContent = 'Expirada';
                    clearInterval(interval);
                    // Redirigir para forzar el cierre de sesión una vez que el tiempo ha expirado
                    if (window.location.pathname !== '/login') {
                        window.location.href = '/login?error=expired';
                    }
                    return;
                }

                const hours = Math.floor(timeLeft / 3600);
                const minutes = Math.floor((timeLeft % 3600) / 60);
                const seconds = timeLeft % 60;

                countdownElement.textContent = 
                    `${hours.toString().padStart(2, '0')}:` +
                    `${minutes.toString().padStart(2, '0')}:` +
                    `${seconds.toString().padStart(2, '0')}`;
            }

            const interval = setInterval(updateCountdown, 1000);
            updateCountdown(); // Initial call to display immediately
        }
    });
</script>
