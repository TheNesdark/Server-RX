---
import { CalendarIcon, AlertCircleIcon, ArrowRightIcon } from "@/components/icons";

interface Props {
  studyId: string;
  actions: any;
  errorMsg?: string;
}

const { studyId, actions, errorMsg } = Astro.props;
---

<div class="login-container">
  <div class="login-card">
    <div class="login-brand">
      <img src="/assets/logo.png" alt="Logo" width="64" height="64" />
      <p>Portal de Pacientes</p>
    </div>
    
    <form method="POST" action={actions.verifyLiteAccess} class="login-form">
      <input type="hidden" name="studyId" value={studyId} />
      
      <div class="input-wrapper">
        <label for="cedula">Documento de Identidad</label>
        <div class="input-field">
          <CalendarIcon size={20} />
          <input 
            type="text" 
            id="cedula"
            name="cedula" 
            placeholder="Ingrese su nÃºmero" 
            required 
            autofocus
            autocomplete="off"
          />
        </div>
      </div>
      
      {errorMsg && (
        <div class="error-message">
          <AlertCircleIcon size={16} />
          <span>{errorMsg}</span>
        </div>
      )}
      
      <button type="submit" class="login-submit">
        Ver Estudio
        <ArrowRightIcon size={18} />
      </button>
    </form>
  </div>
</div>

<style>
  /* LOGIN STYLES */
  .login-container {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    background-color: var(--bg-main);
    padding: 1.5rem;
  }

  .login-card {
    background: var(--bg-surface);
    border: 1px solid var(--border);
    border-radius: 24px;
    padding: 3rem 2.5rem;
    width: 100%;
    max-width: 400px;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .login-brand {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    margin-bottom: 2.5rem;
  }

  .login-brand img {
    margin-bottom: 1.25rem;
    filter: drop-shadow(0 0 20px rgba(15, 118, 110, 0.3));
  }

  .login-brand h1 {
    font-family: "Space Grotesk", sans-serif;
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--text-main);
    margin-bottom: 0.25rem;
  }

  .login-brand p {
    font-size: 0.875rem;
    color: var(--text-dim);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .login-form {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .input-wrapper label {
    display: block;
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--text-main);
    margin-bottom: 0.5rem;
    margin-left: 0.25rem;
  }

  .input-field {
    position: relative;
  }

  .input-field svg {
    position: absolute;
    left: 1rem;
    top: 50%;
    transform: translateY(-50%);
    color: var(--text-dim);
    transition: color 0.2s;
  }

  .input-field input {
    width: 100%;
    height: 50px;
    background: var(--bg-main);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 0 1rem 0 3rem;
    color: var(--text-main);
    font-size: 1rem;
    transition: all 0.2s ease;
  }

  .input-field input:focus {
    outline: none;
    border-color: var(--primary);
    box-shadow: 0 0 0 4px rgba(15, 118, 110, 0.1);
  }

  .input-field input:focus + svg {
    color: var(--primary);
  }

  .error-message {
    background-color: rgba(239, 68, 68, 0.1);
    border: 1px solid rgba(239, 68, 68, 0.2);
    color: #fca5a5;
    padding: 0.875rem;
    border-radius: 12px;
    font-size: 0.875rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .login-submit {
    height: 50px;
    background: var(--primary);
    color: white;
    border: none;
    border-radius: 12px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    transition: all 0.2s;
    margin-top: 0.5rem;
  }

  .login-submit:hover {
    background: var(--primary-hover);
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(15, 118, 110, 0.3);
  }

  .login-submit:active {
    transform: translateY(0);
  }
</style>
