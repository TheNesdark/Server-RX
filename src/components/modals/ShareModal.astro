---
import { ShareIcon, PrinterIcon, AlertTriangleIcon } from "@/components/icons";

interface Props {
  shareUrl?: string;
}

const { shareUrl } = Astro.props;
---

<div id="share-modal" class="modal-overlay" data-shareurl={shareUrl}>
  <div class="modal-content">
    <div class="modal-header">
      <div class="header-title">
        <ShareIcon size={20} />
        <h2>Compartir Estudio</h2>
      </div>
      <div class="header-actions">
        <button id="share-modal-print" class="modal-print" aria-label="Imprimir">
          <PrinterIcon size={20} />
        </button>
        <button id="share-modal-close" class="modal-close" aria-label="Cerrar">
          &times;
        </button>
      </div>
    </div>
    <div class="modal-body">
      <div class="share-options">
        <div class="share-card" id="printable-card">
          <div class="card-header">
            <div class="hospital-info">
              <h3 class="hospital-name">HOSPITAL LOCAL DE MONTELIBANO</h3>
              <p class="system-name">Portal de Visualización de Estudios Médicos</p>
            </div>
          </div>
          
          <div class="card-content-wrapper">
            <div class="card-side qr-side">
              <span class="card-link-label">Escanee para ver en el celular</span>
              <canvas id="qr-canvas"></canvas>
            </div>
            <div class="card-divider">
              <span class="divider-line"></span>
            </div>
            <div class="card-side link-side">
              <span class="card-link-label">Acceso desde navegador web</span>
              <div class="url-display">
                <code id="share-card-url-text">Cargando...</code>
              </div>
              <p class="link-instruction">Ingrese esta dirección en su computadora para ver el estudio.</p>
            </div>
          </div>

          <div class="card-footer">
            <div class="warning-box">
              <AlertTriangleIcon size={16} strokeWidth={2.5} />
              <p class="warning-text">
                <strong>CONFIDENCIAL:</strong> Esta información médica está protegida. El acceso está destinado exclusivamente al paciente y personal autorizado. No comparta este código con terceros.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>

<script>
  // @ts-ignore
  import qrcode from "qrcode";
  import printJS from "print-js";
  const shareModal = document.getElementById("share-modal");
  const closeModalButton = document.getElementById("share-modal-close");
  const printModalButton = document.getElementById("share-modal-print");
  const shareCardUrlText = document.getElementById("share-card-url-text");
  const qrCanvas = document.getElementById("qr-canvas") as HTMLCanvasElement;
  
  // Usar el URL del servidor si está, sino el del cliente (fallback)
  const shareurl = shareModal?.getAttribute('data-shareurl') || window.location.href;
  if (shareCardUrlText) shareCardUrlText.textContent = shareurl;

  // Generar QR
  if (qrCanvas) {
    qrcode.toCanvas(qrCanvas, shareurl, {
      width: 140,
      margin: 1,
      color: {
        dark: "#000000",
        light: "#ffffff"
      }
    }, (error: any) => {
      if (error) console.error("Error al generar QR:", error);
    });
  }

  closeModalButton?.addEventListener("click", () => {
    if (shareModal) {
      shareModal.classList.remove('active');
    }
  });

  // Cerrar al hacer clic fuera del contenido
  window.addEventListener("click", (event) => {
    if (event.target === shareModal) {
      shareModal?.classList.remove("active");
    }
  });

  // Cerrar con tecla Escape
  window.addEventListener("keydown", (e) => {
    if (e.key === "Escape" && shareModal?.classList.contains("active")) {
      shareModal?.classList.remove("active");
    }
  });

  printModalButton?.addEventListener("click", () => {
    printJS({
      printable: 'printable-card',
      type: 'html',
      documentTitle: '',
      style: `
        @page { 
          margin: 0mm;
          size: auto;
        }
        body {
          margin: 0;
          padding: 0;
        }
        #printable-card { 
          padding: 2cm; 
          background: white !important; 
          font-family: 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
          width: 100%;
          height: 100%;
          box-sizing: border-box;
          display: flex !important;
          flex-direction: column !important;
          border: none;
        }
        @media print {
          header, footer, nav { display: none !important; }
        }
        .card-header {
          text-align: center;
          border-bottom: 2px solid #0f766e;
          padding-bottom: 15px;
          margin-bottom: 25px;
        }
        .hospital-name {
          margin: 0;
          font-size: 18px;
          color: #0f766e;
          font-weight: 800;
          text-transform: uppercase;
        }
        .system-name {
          margin: 4px 0 0;
          font-size: 11px;
          color: #444;
          letter-spacing: 0.5px;
        }
        .card-content-wrapper { 
          display: flex !important; 
          flex-direction: column !important;
          align-items: center !important; 
          justify-content: center !important; 
          gap: 25px !important;
          flex: 1 !important;
        }
        .card-side { 
          width: 100% !important;
          display: flex !important; 
          flex-direction: column !important; 
          align-items: center !important;
        }
        .card-link-label { 
          display: block !important;
          font-size: 10px !important; 
          font-weight: 800 !important; 
          color: #000 !important; 
          text-transform: uppercase !important; 
          margin-bottom: 10px !important;
        }
        .qr-side canvas { 
          display: block !important;
          width: 220px !important; 
          height: 220px !important;
          padding: 12px;
          border: 1px solid #ddd;
          background: white;
        }
        .card-divider { 
          width: 80% !important;
          border-top: 1px dashed #ccc !important; 
          height: 0 !important;
          margin: 10px 0 !important;
        }
        .url-display { 
          background-color: #f1f5f9 !important; 
          border: 1px solid #cbd5e1 !important; 
          padding: 10px !important; 
          border-radius: 4px !important; 
          color: #0f172a !important; 
          font-family: 'Courier New', Courier, monospace !important; 
          font-size: 11px !important; 
          word-break: break-all !important; 
          width: 100% !important;
          text-align: center;
          margin-bottom: 8px;
        }
        .link-instruction {
          font-size: 10px;
          color: #64748b;
          margin: 0;
          text-align: center;
        }
        .card-footer {
          margin-top: auto;
          padding-top: 20px;
        }
        .warning-box {
          display: flex !important;
          align-items: center !important;
          gap: 10px !important;
          background: #fefce8 !important;
          border: 1px solid #fef08a !important;
          padding: 12px !important;
          border-radius: 6px !important;
        }
        .warning-text {
          margin: 0 !important;
          font-size: 9px !important;
          color: #854d0e !important;
          line-height: 1.4 !important;
          text-align: center;
        }
        .divider-line { display: none !important; }
      `,
      scanStyles: false
    });
  });
</script>

<style>
  /* Estilos base del modal, similares a HelpModal */
  .modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.7);
    display: none;
    justify-content: center;
    align-items: center;
    z-index: 1000;
  }

  .modal-overlay.active {
    display: flex;
  }

  .modal-content {
    background-color: #ffffff;
    border-radius: 12px;
    width: 95%;
    max-width: 600px;
    max-height: 90vh;
    display: flex;
    flex-direction: column;
    overflow: hidden;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
    transform: translateY(-20px);
    transition: transform 0.3s ease;
  }

  .modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 1.5rem;
    background-color: #f8f9fa;
    border-bottom: 1px solid #eee;
    color: #1a1a1a;
  }

  .modal-header .header-title {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: #1a1a1a;
  }

  .header-actions {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .modal-print {
    background: none;
    border: none;
    color: #666;
    cursor: pointer;
    padding: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: color 0.2s ease, transform 0.2s ease;
  }

  .modal-print:hover {
    color: #1a1a1a;
    transform: scale(1.1);
  }

  .modal-header h2 {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0;
  }

  .modal-close {
    background: none;
    border: none;
    font-size: 1.75rem;
    color: #999;
    cursor: pointer;
    padding: 0 0.5rem;
    line-height: 1;
    transition: color 0.2s ease;
  }

  .modal-close:hover {
    color: #1a1a1a;
  }

  .modal-body {
    padding: 1.5rem;
    overflow-y: auto;
    color: #1a1a1a;
  }

  .share-options {
    display: flex;
    flex-direction: column;
  }

  /* Estilos de la Tarjeta */
  .share-card {
    background: #ffffff;
    padding: 1.5rem;
    color: #1a1a1a;
    position: relative;
    border: 1px solid #eee;
    border-radius: 12px;
  }

  .card-header {
    text-align: center;
    margin-bottom: 1.5rem;
    border-bottom: 1px solid #f0f0f0;
    padding-bottom: 1rem;
  }

  .hospital-name {
    margin: 0;
    font-size: 1.1rem;
    color: #0f766e;
    font-weight: 700;
  }

  .system-name {
    margin: 0.25rem 0 0;
    font-size: 0.75rem;
    color: #666;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .card-content-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 2rem;
  }

  .card-side {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    flex: 1;
  }

  .qr-side canvas {
    max-width: 140px;
    height: auto !important;
    border-radius: 4px;
    border: 1px solid #eee;
  }

  .card-divider {
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 120px;
    justify-content: center;
  }

  .divider-line {
    width: 0;
    border-left: 1px dashed #ccc;
    height: 100%;
  }

  .link-side {
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    align-items: center;
  }

  .card-link-label {
    font-size: 0.7rem;
    font-weight: 700;
    color: #111;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.5rem;
  }

  .url-display {
    color: #1e293b;
    background-color: #f8fafc;
    padding: 0.75rem 1rem;
    border-radius: 6px;
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;
    font-size: 0.85rem;
    word-break: break-all;
    font-weight: 500;
    border: 1px solid #e2e8f0;
    width: 100%;
    text-align: center;
  }

  .link-instruction {
    font-size: 0.7rem;
    color: #64748b;
    margin: 0;
  }

  .card-footer {
    margin-top: 1.5rem;
    padding-top: 1rem;
    border-top: 1px solid #f0f0f0;
  }

  .warning-box {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    background-color: #fffcf0;
    padding: 0.75rem;
    border-radius: 8px;
    border: 1px solid #fef3c7;
  }

  .warning-box svg {
    color: #d97706;
    flex-shrink: 0;
  }

  .warning-text {
    margin: 0;
    font-size: 0.7rem;
    color: #92400e;
    line-height: 1.4;
    text-align: left;
  }

  .url-display code {
    color: inherit;
  }

  /* Impresión */
  @media print {
    @page {
      margin: 0;
      size: auto;
    }
    body {
      margin: 0;
    }
    body * {
      visibility: hidden;
    }
    #share-modal, #share-modal * {
      visibility: hidden;
    }
    #printable-card, #printable-card * {
      visibility: visible;
    }
    #printable-card {
      position: fixed;
      left: 0;
      top: 0;
      width: 100vw;
      height: 100vh;
      margin: 0;
      padding: 2cm;
      border: none;
      box-shadow: none;
      visibility: visible;
      display: flex !important;
      flex-direction: column !important;
      align-items: center;
      justify-content: center;
      background: white;
    }
    .modal-overlay {
      background: none;
    }
  }

  @media (max-width: 600px) {
    .card-content-wrapper {
      flex-direction: column;
    }
    .card-divider {
      flex-direction: row;
      height: auto;
      width: 100%;
      margin: 1.5rem 0;
    }
    .divider-line {
      height: 0;
      width: 100%;
      border-top: 1px dashed #ccc;
      border-left: none;
    }
  }
</style>
