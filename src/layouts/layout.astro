---
interface Props {
	title: string;
}
import Sidebar from '@/components/Studies/Sidebar.astro';
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Sidebar />
		<slot />
	</body>
</html>

<style is:global>
	:root {
	}

	html {
		font-size: 16px;
	}

	*,
	*::before,
	*::after {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
	}

	body {
		font-family:
			"Inter",
			-apple-system,
			BlinkMacSystemFont,
			"Segoe UI",
			Roboto,
			Helvetica,
			Arial,
			sans-serif;
		display: flex;
		height: 100vh;
		width: 100%;
		color: #1e293b;
		overflow: hidden;
	}

	main {
		background: transparent;
		padding: 1.5rem;
		flex: 1;
		min-width: 0;
		overflow-y: auto;
		transition: margin-left 0.3s ease;
	}
</style>
