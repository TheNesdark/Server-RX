---
interface Props {
	title: string;
}
import Sidebar from '@/components/Studies/Sidebar.astro';
import '@/styles/global.css';
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Sidebar />
		<slot />
	</body>
</html>

<style is:global>
	body {
		display: flex;
		height: 100vh;
		width: 100%;
		overflow: hidden;
	}

	main {
		background: transparent;
		padding: clamp(1rem, 2.2vw, 2rem);
		flex: 1;
		min-width: 0;
		overflow-y: auto;
		overflow-x: hidden;
	}

	@media (max-width: 768px) {
		body {
			height: 100dvh;
		}

		main {
			padding-top: 3.75rem;
		}
	}
</style>
