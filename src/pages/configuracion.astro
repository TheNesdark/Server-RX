---
import Layout from "@/layouts/layout.astro";
import { actions } from "astro:actions";
import { readConfig } from "@/config";

const updateResult = Astro.getActionResult(actions.updateConfig);
const updateError = updateResult?.error?.message;
const updateSuccess = (updateResult?.data as any)?.success;

const syncResult = Astro.getActionResult(actions.syncNow);
const syncError = syncResult?.error?.message;
const syncSuccess = (syncResult?.data as any)?.success;
const syncTotal = (syncResult?.data as any)?.total;

const config = readConfig();
---

<Layout title="Configuración">
    <main class="config-page">
        <section class="panel">
            <header class="header">
                <h1>Configuración</h1>
                <p class="subtitle">
                    Edita la configuración del servidor (se guarda en <span
                        class="mono">config.json</span
                    >). Algunos cambios pueden requerir reiniciar el servidor.
                </p>
            </header>

            {
                updateSuccess && (
                    <div class="notice success">
                        Configuración guardada. Si cambiaste credenciales o JWT,
                        reinicia el servidor.
                    </div>
                )
            }
            {updateError && <div class="notice error">{updateError}</div>}

            {
                syncSuccess && (
                    <div class="notice success">
                        Sincronización completada
                        {typeof syncTotal === "number"
                            ? `: ${syncTotal} estudios.`
                            : "."}
                    </div>
                )
            }
            {syncError && <div class="notice error">{syncError}</div>}

            <form method="POST" action={actions.updateConfig} class="form">
                <div class="grid">
                    <div class="field">
                        <label for="ORTHANC_URL">ORTHANC_URL</label>
                        <input
                            id="ORTHANC_URL"
                            name="ORTHANC_URL"
                            required
                            type="url"
                            value={config.ORTHANC_URL}
                            placeholder="http://localhost:8042"
                        />
                    </div>

                    <div class="field">
                        <label for="ADMIN_USERNAME">ADMIN_USERNAME</label>
                        <input
                            id="ADMIN_USERNAME"
                            name="ADMIN_USERNAME"
                            type="text"
                            value={config.ADMIN_USERNAME}
                        />
                    </div>

                    <div class="field">
                        <label for="ORTHANC_USERNAME">ORTHANC_USERNAME</label>
                        <input
                            id="ORTHANC_USERNAME"
                            name="ORTHANC_USERNAME"
                            required
                            type="text"
                            value={config.ORTHANC_USERNAME}
                            autocomplete="username"
                        />
                    </div>

                    <div class="field">
                        <label for="JWT_SECRET">JWT_SECRET</label>
                        <input
                            id="JWT_SECRET"
                            name="JWT_SECRET"
                            type="password"
                            minlength="32"
                            value={config.JWT_SECRET}
                            placeholder="Deja en blanco para mantener"
                        />
                        <p class="help">
                            Mínimo 32 caracteres.
                        </p>
                    </div>

                    <div class="field">
                        <label for="ORTHANC_PASSWORD">ORTHANC_PASSWORD</label>
                        <input
                            id="ORTHANC_PASSWORD"
                            name="ORTHANC_PASSWORD"
                            type="password"
                            autocomplete="current-password"
                            placeholder="Deja en blanco para mantener"
                            value={config.ORTHANC_PASSWORD}
                        />
                        <p class="help">
                            Usa una contraseña fuerte para proteger tu servidor. Si cambias esta
                        </p>
                    </div>

                    <div class="field">
                        <label for="ADMIN_PASSWORD">ADMIN_PASSWORD</label>
                        <input
                            id="ADMIN_PASSWORD"
                            name="ADMIN_PASSWORD"
                            type="password"
                            placeholder="Deja en blanco para mantener"
                            value={config.ADMIN_PASSWORD}
                        />
                        <p class="help">Escribe una contraseña fuerte para proteger tu administrador.</p>
                    </div>

                    <div class="field checkbox">
                        <label class="checkbox-label" for="PROD">
                            <input
                                id="PROD"
                                name="PROD"
                                type="checkbox"
                                checked={config.PROD}
                            />
                            <span>PROD (cookies secure, etc.)</span>
                        </label>
                        <p class="help">
                            Activa esto solo si sirves sobre HTTPS.
                        </p>
                    </div>
                </div>

                <div class="actions">
                    <button type="submit">Guardar</button>
                </div>
            </form>

            <div class="divider" role="separator" aria-hidden="true"></div>

            <div class="sync">
                <h2>Sincronización</h2>
                <p class="subtitle">
                    Dispara la sincronización manual con Orthanc y actualiza la
                    base de datos local.
                </p>
                <form method="POST" action={actions.syncNow} class="sync-form">
                    <button type="submit">Sincronizar ahora</button>
                </form>
            </div>
        </section>
    </main>
</Layout>

<style>
    .config-page {
        padding: clamp(1rem, 2.2vw, 2rem);
        background: transparent;
        min-height: 100vh;
        width: 100%;
        overflow-y: auto;
    }

    .panel {
        max-width: 960px;
        margin: 0 auto;
        background: var(--card-bg);
        border: 1px solid var(--border-subtle);
        border-radius: var(--radius-lg);
        padding: clamp(1rem, 2.1vw, 1.6rem);
        box-shadow: var(--shadow-sm);
    }

    .header {
        display: flex;
        flex-direction: column;
        gap: 6px;
        margin-bottom: 14px;
    }

    h1 {
        font-size: clamp(1.3rem, 2.4vw, 1.6rem);
        letter-spacing: -0.02em;
        margin: 0;
        color: var(--text-main);
        font-weight: 700;
        text-align: left;
    }

    .subtitle {
        margin: 0;
        color: var(--text-muted);
        font-size: 14px;
    }

    .mono {
        font-family:
            ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas,
            "Liberation Mono", "Courier New", monospace;
    }

    .notice {
        border-radius: 10px;
        padding: 10px 12px;
        margin-bottom: 10px;
        border: 1px solid transparent;
        border-left-width: 3px;
        font-size: 14px;
        font-weight: 500;
    }

    .notice.success {
        background: rgba(15, 118, 110, 0.1);
        border-color: rgba(15, 118, 110, 0.3);
        color: #115e59;
    }

    .notice.error {
        background: rgba(239, 68, 68, 0.08);
        border-color: rgba(239, 68, 68, 0.28);
        color: #991b1b;
    }

    .form {
        display: flex;
        flex-direction: column;
        gap: 14px;
    }

    .grid {
        display: grid;
        grid-template-columns: repeat(2, minmax(0, 1fr));
        gap: 12px;
    }

    .field {
        display: flex;
        flex-direction: column;
        gap: 5px;
    }

    label {
        font-size: 11px;
        font-weight: 700;
        letter-spacing: 0.08em;
        text-transform: uppercase;
        color: var(--text-muted);
        margin: 0;
        padding: 0;
        display: block;
    }

    input {
        width: 100%;
        height: 42px;
        padding: 0 12px;
        border-radius: 10px;
        border: 1px solid var(--border-subtle);
        background: var(--surface);
        color: var(--text-main);
        font-size: 14px;
        transition: border-color 0.2s, box-shadow 0.2s;
    }

    input:focus {
        outline: none;
        border-color: var(--hospital-green);
        box-shadow: 0 0 0 3px var(--ring);
    }

    .help {
        margin: 0;
        font-size: 12px;
        color: var(--text-muted);
    }

    .field.checkbox {
        grid-column: 1 / -1;
    }

    .checkbox-label {
        display: flex;
        align-items: center;
        gap: 8px;
        text-transform: none;
        letter-spacing: normal;
        color: var(--text-main);
    }

    .checkbox-label input {
        width: 18px;
        height: 18px;
        padding: 0;
    }

    .actions {
        display: flex;
        justify-content: flex-end;
    }

    .divider {
        height: 1px;
        background: var(--border-subtle);
        margin: 16px 0;
        opacity: 0.8;
    }

    .sync {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .sync h2 {
        font-size: 15px;
        margin: 0;
        color: var(--text-main);
        letter-spacing: -0.01em;
        font-weight: 700;
    }

    .sync-form {
        display: flex;
        justify-content: flex-end;
    }

    button {
        height: 42px;
        padding: 0 18px;
        border-radius: 10px;
        border: none;
        background: var(--hospital-green);
        color: white;
        font-weight: 700;
        cursor: pointer;
        transition: background-color 0.2s ease;
    }

    button:hover {
        background: var(--hospital-green-hover);
    }

    @media (max-width: 780px) {
        .panel {
            padding: 14px;
        }

        .grid {
            grid-template-columns: 1fr;
        }

        .actions {
            justify-content: stretch;
        }

        button {
            width: 100%;
        }
    }
</style>
