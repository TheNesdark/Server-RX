---
import { actions } from 'astro:actions';
import '@/styles/global.css';

// 1. Obtener el resultado de la acción si se acaba de ejecutar
const result = Astro.getActionResult(actions.login);

// 2. Si fue exitoso, redireccionar al inicio
if (result?.data?.success) {
  return Astro.redirect('/');
}

// 3. Manejar errores
const error = result?.error?.message;

// 4. Si ya hay una sesión activa, redireccionar al inicio
if (Astro.cookies.get('auth_token')) {
  return Astro.redirect('/');
}
