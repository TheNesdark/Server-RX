<script>
  // Efecto Parallax para el fondo
  const monitor = document.getElementById('pulse-monitor');
  
  document.addEventListener('mousemove', (e) => {
    if (!monitor) return;
    
    const x = (window.innerWidth / 2 - e.pageX) / 50;
    const y = (window.innerHeight / 2 - e.pageY) / 50;
    
    monitor.style.transform = `translate(${x}px, ${y}px)`;
  });

  // Efecto de parpadeo aleatorio para la línea de pulso (simula interferencia médica)
  const pulseLines = document.querySelectorAll('.pulse-line');
  
  function glitch() {
    const line = pulseLines[Math.floor(Math.random() * pulseLines.length)];
    if (line instanceof HTMLElement) {
      line.style.opacity = '0.4';
      setTimeout(() => {
        line.style.opacity = line.classList.contains('secondary') ? '0.3' : '1';
      }, 50 + Math.random() * 100);
    }
    
    setTimeout(glitch, 2000 + Math.random() * 3000);
  }
  
  glitch();
</script>
