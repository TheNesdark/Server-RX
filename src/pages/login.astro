---
import { actions } from 'astro:actions';
import '@/styles/global.css';

// 1. Obtener el resultado de la acción si se acaba de ejecutar
const result = Astro.getActionResult(actions.login);

// 2. Si fue exitoso, redireccionar al inicio
if (result?.data?.success) {
  return Astro.redirect('/');
}

// 3. Manejar errores
const error = result?.error?.message;

// 4. Si ya hay una sesión activa, redireccionar al inicio
if (Astro.cookies.get('auth_token')) {
  return Astro.redirect('/');
}
---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - DICOM Viewer</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
</head>
<body>
  <div class="login-container">


    <form method="POST" class="login-form" action={actions.login}>
      <div class="form-header">
        <div class="medical-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
            <path d="M22 12h-4l-3 9L9 3l-3 9H2"></path>
          </svg>
        </div>
        <h1>Bienvenido</h1>
        <p class="subtitle">Gestión de Estudios Médicos</p>
      </div>
      
      {error && <div class="error">{error}</div>}
      
      <div class="form-group">
        <label for="username">Usuario</label>
        <input type="text" id="username" name="username" required autofocus placeholder="Nombre de usuario" />
      </div>
      <div class="form-group">
        <label for="password">Contraseña</label>
        <input type="password" id="password" name="password" required placeholder="••••••••" />
      </div>
      <button type="submit">Acceder al Sistema</button>
    </form>
  </div>
</body>
</html>

<style is:global>
  body {
    background: var(--gradient-hero) !important;
    min-height: 100vh;
    margin: 0;
  }
</style>

<style>
  .login-container {
    min-height: 100vh;
    display: grid;
    place-items: center;
    padding: 1rem;
  }

  .login-form {
    background: var(--card-bg);
    padding: 2rem 1.8rem;
    border-radius: 16px;
    border: 1px solid var(--border-subtle);
    box-shadow: var(--shadow-md);
    width: 100%;
    max-width: 410px;
    animation: formFadeIn 0.36s ease-out;
  }

  @keyframes formFadeIn {
    from {
      opacity: 0;
      transform: translateY(8px);
    }

    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .form-header {
    text-align: center;
    margin-bottom: 1.8rem;
  }

  .medical-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 54px;
    height: 54px;
    border-radius: 14px;
    background: rgba(15, 118, 110, 0.08);
    border: 1px solid rgba(15, 118, 110, 0.24);
    color: var(--hospital-green);
    margin-bottom: 1rem;
  }

  h1 {
    color: var(--text-main);
    margin: 0;
    font-size: 1.85rem;
    font-weight: 700;
    letter-spacing: -0.02em;
  }

  .subtitle {
    color: var(--text-muted);
    margin-top: 0.5rem;
    font-size: 0.96rem;
    font-weight: 500;
  }

  .form-group {
    margin-bottom: 1rem;
  }

  label {
    display: block;
    margin-bottom: 0.5rem;
    color: var(--text-muted);
    font-size: 0.72rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  input {
    width: 100%;
    height: 44px;
    padding: 0 0.9rem;
    border: 1px solid var(--border-subtle);
    border-radius: 10px;
    background: var(--surface);
    color: var(--text-main);
    font-size: 0.98rem;
    transition: border-color 0.2s ease, box-shadow 0.2s ease;
    box-sizing: border-box;
  }

  input:focus {
    outline: none;
    border-color: var(--hospital-green);
    box-shadow: 0 0 0 3px var(--ring);
  }

  button {
    width: 100%;
    height: 44px;
    background: var(--hospital-green);
    color: white;
    border: none;
    border-radius: 10px;
    cursor: pointer;
    font-size: 1rem;
    font-weight: 700;
    margin-top: 0.4rem;
    transition: background-color 0.2s ease;
  }

  button:hover {
    background: var(--hospital-green-hover);
  }

  button:active {
    transform: none;
  }

  .error {
    color: #9f1239;
    background: #fff4f6;
    padding: 0.72rem;
    border-radius: 10px;
    text-align: center;
    margin-bottom: 1rem;
    font-size: 0.86rem;
    border: 1px solid #ffdbe2;
    font-weight: 600;
  }

  @media (max-width: 520px) {
    .login-form {
      padding: 1.5rem 1.2rem;
      border-radius: 14px;
    }

    h1 {
      font-size: 1.6rem;
    }
  }

</style>
