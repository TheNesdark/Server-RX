    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    padding: 1rem;
    position: relative;
    background: radial-gradient(circle at 30% 20%, rgba(14, 165, 164, 0.12), transparent 55%),
      radial-gradient(circle at 80% 0%, rgba(37, 99, 235, 0.12), transparent 45%);
    overflow: hidden;
  }




  .login-form {
    background: var(--card-bg);
    backdrop-filter: blur(18px) saturate(160%);
    -webkit-backdrop-filter: blur(18px) saturate(160%);
    padding: 3.25rem 3rem;
    border-radius: 1.75rem;
    border: 1px solid var(--border-subtle);
    box-shadow: 
      0 24px 60px -18px rgba(6, 24, 26, 0.35),
      0 0 30px rgba(14, 165, 164, 0.12),
      inset 0 0 0 1px rgba(255, 255, 255, 0.6);
    width: 100%;
    max-width: 420px;
    z-index: 10;
    animation: formFadeIn 0.8s cubic-bezier(0.16, 1, 0.3, 1);
  }



  .form-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .medical-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 64px;
    height: 64px;
    background: linear-gradient(145deg, rgba(14, 165, 164, 0.18), rgba(37, 99, 235, 0.14));
    color: var(--hospital-green-hover);
    border-radius: 1.25rem;
    margin-bottom: 1.5rem;
    box-shadow: 0 12px 24px -8px rgba(14, 165, 164, 0.25);
    animation: pulse-icon 2s infinite ease-in-out;
  }


  h1 {
    color: #0f172a;
    margin: 0;
    font-size: 2.1rem;
    font-weight: 700;
    letter-spacing: -0.03em;
  }

  .subtitle {
    color: #64748b;
    margin-top: 0.5rem;
    font-size: 1rem;
    font-weight: 600;
  }

  .form-group {
    margin-bottom: 1.75rem;
  }

  label {
    display: block;
    margin-bottom: 0.6rem;
    color: #475569;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  input {
    width: 100%;
    padding: 1rem 1.25rem;
    border: 1.5px solid var(--border-subtle);
    border-radius: 1rem;
    background: rgba(255, 255, 255, 0.8);
    color: #0f172a;
    font-size: 1rem;
    font-weight: 500;
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    box-sizing: border-box;
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.6);
  }

  input:focus {
    outline: none;
    border-color: var(--hospital-green);
    background: white;
    box-shadow: 0 0 0 5px var(--ring), var(--shadow-sm);
    transform: translateY(-1px);
  }

  button {
    width: 100%;
    padding: 1.125rem;
    background: linear-gradient(135deg, var(--hospital-green) 0%, var(--hospital-green-hover) 100%);
    color: white;
    border: none;
    border-radius: 1rem;
    cursor: pointer;
    font-size: 1.1rem;
    font-weight: 700;
    margin-top: 1rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 14px 22px -6px rgba(14, 165, 164, 0.35);
  }

  button:hover {
    transform: translateY(-2px);
    box-shadow: 0 24px 30px -10px rgba(14, 165, 164, 0.45);
    filter: brightness(1.06);
  }

  button:active {
    transform: translateY(0);
  }


  .error {
    color: #be123c;
    background: #fff1f2;
    padding: 1rem;
    border-radius: 1rem;
    text-align: center;
    margin-bottom: 2rem;
    font-size: 0.9rem;
    border: 1px solid #ffe4e6;
    font-weight: 600;
    animation: shake 0.5s cubic-bezier(0.36, 0.07, 0.19, 0.97) both;
  }

</style>
