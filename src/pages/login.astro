---
import { actions } from 'astro:actions';
import '@/styles/global.css';

// 1. Obtener el resultado de la acción si se acaba de ejecutar
const result = Astro.getActionResult(actions.login);

// 2. Si fue exitoso, redireccionar al inicio
if (result?.data?.success) {
  return Astro.redirect('/');
}

// 3. Manejar errores
const error = result?.error?.message;

// 4. Si ya hay una sesión activa, redireccionar al inicio
if (Astro.cookies.get('auth_token')) {
  return Astro.redirect('/');
}
---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - DICOM Viewer</title>
</head>
<body>
  <div class="login-container">


    <form method="POST" class="login-form" action={actions.login}>
      <div class="form-header">
        <div class="medical-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
            <path d="M22 12h-4l-3 9L9 3l-3 9H2"></path>
          </svg>
        </div>
        <h1>Bienvenido</h1>
        <p class="subtitle">Gestión de Estudios Médicos</p>
      </div>
      
      {error && <div class="error">{error}</div>}
      
      <div class="form-group">
        <label for="username">Usuario</label>
        <input type="text" id="username" name="username" required autofocus placeholder="Nombre de usuario" />
      </div>
      <div class="form-group">
        <label for="password">Contraseña</label>
        <input type="password" id="password" name="password" required placeholder="••••••••" />
      </div>
      <button type="submit">Acceder al Sistema</button>
    </form>
  </div>
</body>
</html>

<style is:global>
  body {
    background: #f8fafc !important;
    height: 100vh;
    overflow: hidden;
    margin: 0;
  }
</style>

<style>
  .login-container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    padding: 1rem;
    position: relative;
    background: radial-gradient(circle at center, #ffffff 0%, #f1f5f9 100%);
    overflow: hidden;
  }




  .login-form {
    background: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(20px) saturate(180%);
    -webkit-backdrop-filter: blur(20px) saturate(180%);
    padding: 3.5rem 3rem;
    border-radius: 2rem;
    border: 1px solid rgba(255, 255, 255, 0.5);
    box-shadow: 
      0 20px 40px -10px rgba(0, 0, 0, 0.1),
      0 0 20px rgba(20, 184, 166, 0.1),
      inset 0 0 0 1px rgba(255, 255, 255, 0.5);
    width: 100%;
    max-width: 420px;
    z-index: 10;
    animation: formFadeIn 0.8s cubic-bezier(0.16, 1, 0.3, 1);
  }



  .form-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .medical-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 64px;
    height: 64px;
    background: var(--bg-light);
    color: var(--hospital-green);
    border-radius: 1.25rem;
    margin-bottom: 1.5rem;
    box-shadow: 0 8px 16px -4px rgba(20, 184, 166, 0.2);
    animation: pulse-icon 2s infinite ease-in-out;
  }


  h1 {
    color: #0f172a;
    margin: 0;
    font-size: 2rem;
    font-weight: 800;
    letter-spacing: -0.03em;
  }

  .subtitle {
    color: #64748b;
    margin-top: 0.5rem;
    font-size: 1rem;
    font-weight: 500;
  }

  .form-group {
    margin-bottom: 1.75rem;
  }

  label {
    display: block;
    margin-bottom: 0.6rem;
    color: #475569;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  input {
    width: 100%;
    padding: 1rem 1.25rem;
    border: 2px solid #f1f5f9;
    border-radius: 1rem;
    background: #f8fafc;
    color: #0f172a;
    font-size: 1rem;
    font-weight: 500;
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    box-sizing: border-box;
  }

  input:focus {
    outline: none;
    border-color: var(--hospital-green);
    background: white;
    box-shadow: 0 0 0 5px rgba(20, 184, 166, 0.08);
    transform: translateY(-1px);
  }

  button {
    width: 100%;
    padding: 1.125rem;
    background: linear-gradient(135deg, var(--hospital-green) 0%, var(--hospital-green-hover) 100%);
    color: white;
    border: none;
    border-radius: 1rem;
    cursor: pointer;
    font-size: 1.1rem;
    font-weight: 700;
    margin-top: 1rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 10px 15px -3px rgba(20, 184, 166, 0.3);
  }

  button:hover {
    transform: translateY(-2px);
    box-shadow: 0 20px 25px -5px rgba(20, 184, 166, 0.4);
    filter: brightness(1.1);
  }

  button:active {
    transform: translateY(0);
  }


  .error {
    color: #be123c;
    background: #fff1f2;
    padding: 1rem;
    border-radius: 1rem;
    text-align: center;
    margin-bottom: 2rem;
    font-size: 0.9rem;
    border: 1px solid #ffe4e6;
    font-weight: 600;
    animation: shake 0.5s cubic-bezier(0.36, 0.07, 0.19, 0.97) both;
  }

</style>
