{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node", 
    "paths": {
      "@/*": [
        "./src/*"
      ],
    },
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  }
}